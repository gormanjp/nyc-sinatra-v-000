<h3>Edit Figure</h3>
<form action="/figures/<%=@figure.id%>" method="POST">
	<%= @figure.name %>
	<br>
	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="text" name="figure[name]" id="figure_name" value="Figure's Name">
	<br>
	<h2>Titles:</h2>
	<% Title.all.each do |title| %>
	<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>">
	<%= title.name %>
	<br>
	<% end %>
	<p>Or create a new Title:</p>
	<input type="text" name="title[name]" id="new_title">

	<h2>Landmarks</h2>
	<% Landmark.all.each do |landmark| %>
	<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>">
	<%= landmark.name %>
	<br>
	<% end %>
	<p>Or create a new Landmark</p>
	<input type="text" name="landmark[name]" id="new_landmark">
	<br>
	<input type="submit" name="Edit Figure" id="Edit Figure" value="Save">
</form>